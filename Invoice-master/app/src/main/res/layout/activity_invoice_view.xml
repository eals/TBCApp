    <View
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp">



        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_Add_Invoice_Item"
            android:id="@+id/ConstaddInvoiceItem"
            />




   </LinearLayout>
    <ListView
        android:id="@+id/FInvoice_Item_listview"
        android:layout_width="match_parent"
        android:layout_height="200dp"

        android:layout_marginTop="2dp"></ListView>
     <View
         android:layout_marginTop="5dp"
         android:layout_marginLeft="10dp"
         android:layout_marginRight="10dp"
         android:layout_marginBottom="5dp"
         android:layout_width="match_parent"
         android:layout_height="1dp"
         android:background="@android:color/darker_gray"/>

     <LinearLayout
         android:orientation="horizontal"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="center_horizontal"
         android:layout_margin="10dp">

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"

             android:text="Allow Total"
             android:id="@+id/ConstAllowTotal" />
         <CheckBox
             android:layout_width="wrap_content"
             android:layout_marginLeft="1dp"
             android:layout_height="wrap_content"
             android:id="@+id/CheckFront"
             android:text="@string/F_item_Quantity"/>
         <CheckBox
             android:layout_width="wrap_content"
             android:layout_marginLeft="1dp"
             android:layout_height="wrap_content"
             android:id="@+id/CheckBack"
             android:text="@string/B_item_Quantity"/>
         <CheckBox
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="1dp"
             android:id="@+id/CheckLeft"
             android:text="@string/L_item_Quantity"/>
         <CheckBox
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="1dp"
             android:id="@+id/CheckRight"
             android:text="@string/R_item_Quantity"/>
     </LinearLayout>

     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
         <TextView
             android:id="@+id/ConstFTotal"
             android:layout_width="wrap_content"
             android:text="@string/Total"
             android:layout_height="wrap_content"
             android:layout_marginLeft="10dp"
             android:layout_alignParentLeft="true"
             />

         <TextView
             android:id="@+id/FTotal"
             android:layout_width="wrap_content"
             android:text="@string/F"
             android:layout_height="wrap_content"
             android:layout_marginLeft="10dp"
             android:layout_toRightOf="@+id/ConstFTotal"
             />
         <TextView
             android:id="@+id/FTotalValue"
             android:layout_width="wrap_content"
             android:text="$0"
             android:ems="5"
             android:layout_height="wrap_content"
             android:layout_marginLeft="10dp"
             android:layout_toRightOf="@+id/FTotal"
             />


     </RelativeLayout>
     <RelativeLayout
     android:layout_marginTop="2dp"
     android:layout_width="match_parent"
     android:layout_height="wrap_content">
     <TextView
         android:id="@+id/ConstBTotal"
         android:layout_width="wrap_content"
         android:text="@string/Total"
         android:layout_height="wrap_content"
         android:layout_marginLeft="10dp"
         android:layout_alignParentLeft="true"
         />

     <TextView
         android:id="@+id/BTotal"
         android:layout_width="wrap_content"
         android:text="@string/B"
         android:layout_height="wrap_content"
