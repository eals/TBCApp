         android:layout_height="wrap_content"
         android:layout_marginLeft="10dp"
         android:layout_toRightOf="@+id/BTotal"
         />
 </RelativeLayout>
     <RelativeLayout
         android:layout_marginTop="2dp"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
         <TextView
             android:id="@+id/ConstLTotal"
             android:layout_width="wrap_content"
             android:text="@string/Total"
             android:layout_height="wrap_content"
             android:layout_marginLeft="10dp"
             android:layout_alignParentLeft="true"
             />

         <TextView
             android:id="@+id/LTotal"
             android:layout_width="wrap_content"
             android:text="@string/L"
             android:layout_height="wrap_content"
             android:layout_marginLeft="10dp"
             android:layout_toRightOf="@+id/ConstLTotal"
             />
         <TextView
             android:id="@+id/LTotalValue"
             android:layout_width="wrap_content"
             android:text="$0"
             android:ems="5"
             android:layout_height="wrap_content"
             android:layout_marginLeft="10dp"
             android:layout_toRightOf="@+id/LTotal"
             />
     </RelativeLayout>
     <RelativeLayout
         android:layout_marginTop="2dp"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
     <TextView
         android:id="@+id/ConstRTotal"
         android:layout_width="wrap_content"
         android:text="@string/Total"
         android:layout_height="wrap_content"
         android:layout_marginLeft="10dp"
         android:layout_alignParentLeft="true"
         />

     <TextView
         android:id="@+id/RTotal"
         android:layout_width="wrap_content"
         android:text="@string/R"
         android:layout_height="wrap_content"
         android:layout_marginLeft="10dp"
         android:layout_toRightOf="@+id/ConstRTotal"
         />
     <TextView
         android:id="@+id/RTotalValue"
         android:layout_width="wrap_content"
         android:text="$0"
         android:ems="5"
         android:layout_height="wrap_content"
         android:layout_marginLeft="10dp"
         android:layout_toRightOf="@+id/RTotal"
         />
     </RelativeLayout>
     <View
         android:layout_marginTop="5dp"
         android:layout_marginLeft="10dp"
         android:layout_marginRight="10dp"
         android:layout_marginBottom="5dp"
         android:layout_width="match_parent"
         android:layout_height="1dp"
         android:background="@android:color/darker_gray"/>

     <RelativeLayout
         android:layout_marginTop="2dp"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
         <TextView
             android:id="@+id/ConstTotal"
             android:layout_width="wrap_content"
             android:text="@string/Total"
             android:layout_height="wrap_content"
             android:layout_marginLeft="10dp"
             android:layout_alignParentLeft="true"
             />

         <TextView
             android:id="@+id/FinalTotal"
             android:layout_width="wrap_content"
             android:text="$0"
             android:layout_height="wrap_content"
             android:layout_marginLeft="10dp"
             android:layout_toRightOf="@+id/ConstTotal"
             />

     </RelativeLayout>
     <LinearLayout
         android:orientation="horizontal"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="center_horizontal"
         android:layout_margin="10dp">

         <Button
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Add invoice"
             android:id="@+id/ConstaddInvoiceButton"
             android:onClick="AddInvoice"
             />

         <Button
             android:id="@+id/PrintViewButton"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="20dp"
             android:text="@string/printView"
             android:onClick="refresh"
             />

     </LinearLayout>


     </LinearLayout>
</ScrollView>
